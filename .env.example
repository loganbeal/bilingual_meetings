# Church Translation System - Environment Configuration
# Copy this file to .env and fill in your values

# Soniox API Key (Required for production translation)
# Get your API key from: https://soniox.com
SONIOX_API_KEY=your_soniox_api_key_here

# Testing Mode (Set to 'true' to run without Soniox API)
# This generates dummy translations for testing the system
TESTING_MODE=true

# Server Configuration
DEBUG=true
HOST=0.0.0.0
PORT=5000

# Flask Secret Key (Change this in production!)
SECRET_KEY=change-this-to-a-random-secret-key-in-production
